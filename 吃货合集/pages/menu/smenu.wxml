<view class="flex-row">
  <checkbox-group bindchange="listenCheckboxChange">
    <!-- <view wx:for="{{ smenu }}" wx:for-index="idx" wx:key="name"> -->
    <view wx:for="{{ globalStatusMenuData[firstIndex].children }}" wx:for-index="idx" wx:key="name">
      <view class="mmc wx-panel">
        <checkbox class="menucontent" value="{{idx}}" checked='{{item.status}}' data-idx="{{idx}}">{{ item.menuName }}</checkbox>
        <view bindtap='navThird' data-idx="{{idx}}" class="wx-panel">
          <image class="icon-right" src="/images/right.png"></image>
        </view>
      </view>
    </view>
  </checkbox-group>
</view>